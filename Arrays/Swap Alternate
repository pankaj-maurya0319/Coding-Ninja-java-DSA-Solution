
public class Solution {
    
    public static void swapAlternate(int arr[]) {
    	//Your code goes here
        int size;
        int n = arr.length;
        if(n%2==0){
			size=n;            
        }else{
            size=n-1;
        }
        int temp;
        
        for(int i=0; i<size; i++){
            temp = arr[i];
            arr[i]=arr[i+1];
            arr[i+1]=temp;
            i++;
        }
    }
}
