public class Solution {
    public static int[] printRowWise(int [][]a) {
        // Write your code here.

        if(a.length==0){
            return new int[0];
        }
        int k=0;
        int arr[] = new int[a.length * a[0].length];

        for(int i=0; i<a.length; i++){

            for(int j=0; j<a[0].length; j++){

                arr[k] = a[i][j];
                k++;
            }
        }
        return arr;
    }
}
