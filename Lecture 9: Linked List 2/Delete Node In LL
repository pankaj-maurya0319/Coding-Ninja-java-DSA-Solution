public class Solution {

	public static LinkedListNode<Integer> deleteNode(LinkedListNode<Integer> head, int pos){
		//Your code goes here
        
		if(head == null )return null;

        if (pos==0)
        {
            return head.next;
        }
       
	   int length = 0;

	LinkedListNode<Integer> temp = head;

	while(temp != null){
		length++;
		temp = temp.next;
	}

	temp = head;

	if(pos > length-1){
		return head;
	}

	int count = 0;

	while(count < pos-1){
		temp=temp.next;
		count++;
	}

	temp.next = temp.next.next;



        return head;
	}
}
